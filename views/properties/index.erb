<section class="flex-container">
  <main class="flex-item main">
    <h2>.properties</h2>

  <a href="/properties/new" class="button">add a property now</a>

    <div id="wrapper">
      <% @properties.each do |property| %>
        <div class="card-cont">
          <div class="flip-card">
            <div class="flip-card-inner">
              <div class="flip-card-front">
                <div class="property">
                  <h3><a href="/properties/<%= property.id %>"><%= property.name %></a></h3>
                  <p>Category:<br><%= property.category %></p>
                  <p>Place:<br> <%= property.place %></p>
                  <p>Contacts:<br> <%= property.contacts %></p>
                </div>
              </div>
              <div class="flip-card-back">
                <div class="property">
                  <h3><a href="/properties/<%= property.id %>"><%= property.name %></a></h3>
                  <p>Address:<br> <%= property.address %></p>
                  <p>Booking platform:<br> <%= property.booking_platform_name %></p>
                  <p>Sleeps:<br> <%= property.sleeps %></p>
                  <p>Daily fee:<br> Â£<%= property.daily_fee %></p>
                  <p>Pending guests: <br> 
                  <% if property.guests.empty? %>
                     <%= 'Property available!' %>
                  <% else %>
                      <% for guest in property.guests %>
                          <%= guest.last_name %>                    
                       <% end %>
                  <% end %>
                  </p>
                </div>
              </div>
            </div>
        </div>
      <% end %>
    </div>

  </main>
</section>
