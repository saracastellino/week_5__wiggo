<section class="flex-container">
  <main class="flex-item main">
    <h2>.guests</h2>

    Sort by:
    <a href="/guests">Name |</a>
    <a href="/guests/by_nationality">Nationality</a>

    <a href="/guests/new" class="button">add a guest now</a>

    <div id="wrapper">
      <% @guests.each do |guest| %>
        <div class="card-cont">
          <div class="flip-card">
            <div class="flip-card-inner">
              <div class="flip-card-front">
                  <div class="guest">
                      <h3><a href="/guests/<%= guest.id %>"><%= guest.guest_name %></a></h3>
                      <p>Nationality:<br> <%= guest.nationality %></p>
                      <p>DOB:<br> <%= guest.dob %></p>
                    </div>
                  </div>
                <div class="flip-card-back">
                  <div class="guest">
                    <h3><a href="/guests/<%= guest.id %>"><%= guest.guest_name %></a></h3>
                    <p>Documents:<br> <%= guest.documents %></p>
                    <p>Contacts:<br> <%= guest.contacts %></p>
                    <p>Properties booked: <br> 
                        <% if guest.properties.empty? %>
                        <%= 'No properties booked!' %>
                      <% else %>
                        <% for property in guest.properties %><%= property.name %><% end %>
                        <% end %>
                  </p>
                  </div>
                </div>
              </div>
            </div>
      <% end %>
    </div>

  </main>
</section>
