<section class="flex-container">
  <aside class="flex-item sidebar">Sidebar</aside>
  <main class="flex-item main">
    <h2>.guests</h2>
    <div id="guest-wrapper">
      <% @guests.each do |guest| %>
      <div class="cardCont">
      <div class="flip-card">
    <div class="flip-card-inner">
      <div class="flip-card-front">
      <div class="guest">
        <h3><a href="/guests/<%= guest.id %>"><%= guest.guest_name %></a></h3>
        <p>Nationality: <%= guest.nationality %></p>
        <p>Pax: <%= guest.pax %></p>
      </div>
    </div>
    <div class="flip-card-back">
      <div class="guest">
        <h3><a href="/guests/<%= guest.id %>"><%= guest.guest_name %></a></h3>
        <p>DOB: <%= guest.dob %></p>
        <p>Documents: <%= guest.documents %></p>
        <p>Contacts: <%= guest.contacts %></p>
      </div>
        </div>
      </div>
      </div>
        <% end %>
        </div>
      </div>
  </main>
  <footer class="flex-item footer">Footer</footer>
</section>
