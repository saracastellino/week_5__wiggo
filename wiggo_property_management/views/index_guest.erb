<section class="flex-container">
  <main class="flex-item main">
    <h2>.guests</h2>

    <a href="/guests/new" class="button">add a guest</a>

    <div id="guest-wrapper">
      <% @guests.each do |guest| %>
      <div class="cardCont">
      <div class="flip-card">
    <div class="flip-card-inner">
      <div class="flip-card-front">
      <div class="guest">
        <h3><a href="/guests/<%= guest.id %>"><%= guest.guest_name %></a></h3>
        <p>Nationality:<br> <%= guest.nationality %></p>
        <p>Pax:<br><%= guest.pax %></p>
      </div>
    </div>
    <div class="flip-card-back">
      <div class="guest">
        <h3><a href="/guests/<%= guest.id %>"><%= guest.guest_name %></a></h3>
        <p>DOB:<br> <%= guest.dob %></p>
        <p>Documents:<br> <%= guest.documents %></p>
        <p>Contacts:<br> <%= guest.contacts %></p>
      </div>
        </div>
      </div>
      </div>
        <% end %>
        </div>
      </div>
  </main>
  <footer class="flex-item footer">Wiggo | Property management      Palo Alto 3000 Tannery Way Santa Clara, CA 95054.</footer>
</section>
